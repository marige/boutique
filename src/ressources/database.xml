CREATE TABLE Article (
  idArticle INTEGER UNSIGNED NOT NULL AUTO_INCREMENT,
  idCategorie INTEGER UNSIGNED NOT NULL,
  libArticle VARCHAR(255) NULL,
  prixvente INTEGER UNSIGNED NULL,
  stock INTEGER UNSIGNED NULL,
  PRIMARY KEY(idArticle),
);

CREATE TABLE BonCommande (
  idBonCommande INTEGER UNSIGNED NOT NULL AUTO_INCREMENT,
  idFournisseur INTEGER UNSIGNED NOT NULL,
  libBonCommande VARCHAR NULL,
  dateBonCommande DATETIME NULL,
  reception BOOL NULL,
  datereception DATE NULL,
  PRIMARY KEY(idBonCommande),
);

CREATE TABLE Categorie (
  idCategorie INTEGER UNSIGNED NOT NULL AUTO_INCREMENT,
  libCategorie VARCHAR(255) NULL,
  PRIMARY KEY(idCategorie)
);

CREATE TABLE DetailBonCommande (
  idDetailBonCommande INTEGER UNSIGNED NOT NULL AUTO_INCREMENT,
  idArticle INTEGER UNSIGNED NOT NULL,
  puachat INTEGER UNSIGNED NOT NULL,
  idBonCommande INTEGER UNSIGNED NOT NULL,
  libDetailBonCommande VARCHAR(255) NULL,
  quantiteDetailBonCommande DOUBLE NULL,
  dateperemption DATE NULL,
  PRIMARY KEY(idDetailBonCommande),
);

CREATE TABLE Facture (
  idFacture INTEGER UNSIGNED NOT NULL AUTO_INCREMENT,
  dateFacture DATE NULL,
  client VARCHAR(100) NULL,
  PRIMARY KEY(idFacture)
);

CREATE TABLE Fournisseur (
  idFournisseur INTEGER UNSIGNED NOT NULL AUTO_INCREMENT,
  libFournisseur VARCHAR(100) NULL,
  telFournisseur VARCHAR(100) NULL,
  ifuFournisseur VARCHAR(255) NULL,
  rcmFournisseur VARCHAR(255) NULL,
  detailsFournisseur VARCHAR(255) NULL,
  PRIMARY KEY(idFournisseur)
);

CREATE TABLE Utilisateur (
  idUtilisateur INTEGER UNSIGNED NOT NULL AUTO_INCREMENT,
  libUtilisateur VARCHAR(100) NULL,
  ifuUtilisateur VARCHAR(255) NULL,
  rcmUtilisateur VARCHAR(255) NULL,
  detailsUtilisateur VARCHAR(255) NULL,
  PRIMARY KEY(idUtilisateur)
);

CREATE TABLE vente (
  idVente INTEGER UNSIGNED NOT NULL AUTO_INCREMENT,
  idArticle INTEGER UNSIGNED NOT NULL,
  idFacture INTEGER UNSIGNED NOT NULL,
  qte INTEGER UNSIGNED NULL,
  pu INTEGER UNSIGNED NULL,
  PRIMARY KEY(idVente),
);


