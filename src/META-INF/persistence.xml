<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="BoutiquePU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>categorie.Categorie</class>
    <class>fournisseur.Fournisseur</class>
    <class>boncommande.BonCommande</class>
    <class>facture.Facture</class>
    <class>vente.Vente</class>
    <class>tableView.DetailFacture</class>
    <class>detailboncommande.DetailBonCommande</class>
    <class>utilisateur.Utilisateur</class>
    <class>societe.Societe</class>
    <class>article.Article</class>
    <class>autorisation.Autorisation</class>
    <class>controller.Controler</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/boutique"/>
      <property name="javax.persistence.jdbc.user" value=""/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value=""/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
